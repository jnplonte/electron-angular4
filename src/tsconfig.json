{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
      "./app/**/*.ts"
  ],
  "exclude": [
      "./app/**/*.spec.ts"
  ]
}
